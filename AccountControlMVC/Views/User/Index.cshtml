@using AccountControlMVC.Models;
@{
    Layout = null;
    IEnumerable<User> users = ViewBag.Users;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <a href="~/User/Create">Add User</a>
        <table style="" border="1">
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Login</th>
                <th>Password</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th></th>
            </tr>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Login</td>
                    <td>@user.Password</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@(user.Role?.Name)</td>
                    <td>
                        <a href="~/User/Edit/@user.Id">Edit</a>|
                        <a href="~/User/Delete/@user.Id">Delete</a>
                    </td>
                </tr>
            }
            </table>
</div>
</body>
</html>
